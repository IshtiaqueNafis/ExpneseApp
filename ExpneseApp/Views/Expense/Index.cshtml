@model IEnumerable<ExpneseApp.Models.Expense>
<div class="container">
    <div class="row pt-4">
        
        <div class="col-6">
            <h2 class="text-primary">Showed all Expenses</h2>
        </div>
        <div class="col-6">
            
            <a asp-controller="Expense" asp-action="Create" class="btn btn-success">Create New item</a>
           


        </div>

    </div>

</div>
    
<table class="table table-dark">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Expense Type</th>
        <th scope="col">Crud Application</th>
    </tr>
    </thead>
    <tbody>


    @foreach (var expense in Model)

    {
        <tr>
            <td width="30%">@expense.Id</td>
            <td width="30%">@expense.ExpenseType</td>
            <td width="30%">@expense.Cost</td>
            <td width="40%">
                <a asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id" class="btn btn-primary" mx-1>Update</a>
                                           
                <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id" class="btn btn-danger" mx-1>Delete</a>
                <!-- in the asp-route-Id="expense.Id" is there to get the id  -->
            </td>
            
        </tr>

    }



    </tbody>
</table>
